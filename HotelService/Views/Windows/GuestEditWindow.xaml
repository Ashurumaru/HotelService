<Window x:Class="HotelService.Views.Windows.GuestEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelService.Views.Windows"
        mc:Ignorable="d"
        Title="Редактирование гостя" 
        Height="580" 
        Width="650"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource CustomWindowStyle}"
        MouseDown="Window_MouseDown">
    <Border Background="{StaticResource BackgroundPrimaryColor}" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <!-- Заголовок окна -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" CornerRadius="10,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="WindowTitleTextBlock" 
                               Text="Создание нового гостя" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="20,0,0,0"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <Button x:Name="MinimizeButton" Style="{StaticResource DarkMinimizeButtonStyle}" Click="MinimizeButton_Click"/>
                        <Button x:Name="CloseButton" Style="{StaticResource DarkCloseButtonStyle}" Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Форма редактирования -->
            <ScrollViewer Grid.Row="1" Margin="0,10,0,0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30,10,30,20">
                    <!-- Основная информация о госте -->
                    <Border Background="{StaticResource BackgroundSecondaryColor}" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Основная информация" 
                                       Style="{StaticResource SectionHeaderStyle}" 
                                       Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Фамилия -->
                                <StackPanel Grid.Column="0" Grid.Row="0">
                                    <TextBlock Text="Фамилия *" Style="{StaticResource LabelTextStyle}"/>
                                    <TextBox x:Name="LastNameTextBox" 
                                             Style="{StaticResource DefaultTextBoxStyle}"/>
                                </StackPanel>

                                <!-- Имя -->
                                <StackPanel Grid.Column="2" Grid.Row="0">
                                    <TextBlock Text="Имя *" Style="{StaticResource LabelTextStyle}"/>
                                    <TextBox x:Name="FirstNameTextBox" 
                                             Style="{StaticResource DefaultTextBoxStyle}"/>
                                </StackPanel>

                                <!-- Отчество -->
                                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,15,0,0">
                                    <TextBlock Text="Отчество" Style="{StaticResource LabelTextStyle}"/>
                                    <TextBox x:Name="MiddleNameTextBox" 
                                             Style="{StaticResource DefaultTextBoxStyle}"/>
                                </StackPanel>

                                <!-- Телефон -->
                                <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,15,0,0">
                                    <TextBlock Text="Телефон" Style="{StaticResource LabelTextStyle}"/>
                                    <TextBox x:Name="PhoneTextBox" 
                                             Style="{StaticResource DefaultTextBoxStyle}"/>
                                </StackPanel>

                                <!-- Email -->
                                <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,15,0,0">
                                    <TextBlock Text="Email" Style="{StaticResource LabelTextStyle}"/>
                                    <TextBox x:Name="EmailTextBox" 
                                             Style="{StaticResource DefaultTextBoxStyle}"/>
                                </StackPanel>

                                <!-- Дата рождения -->
                                <StackPanel Grid.Column="2" Grid.Row="2" Margin="0,15,0,0">
                                    <TextBlock Text="Дата рождения" Style="{StaticResource LabelTextStyle}"/>
                                    <DatePicker x:Name="BirthDatePicker"/>
                                </StackPanel>

                                <!-- VIP-статус -->
                                <StackPanel Grid.Column="0" Grid.Row="3" Margin="0,15,0,0">
                                    <TextBlock Text="VIP-статус" Style="{StaticResource LabelTextStyle}"/>
                                    <CheckBox x:Name="VipCheckBox" 
                                              Content="Отметить гостя как VIP" 
                                              Margin="0,10,0,0"/>
                                </StackPanel>

                                <!-- Группа гостей -->
                                <StackPanel Grid.Column="2" Grid.Row="3" Margin="0,15,0,0">
                                    <TextBlock Text="Группа гостей" Style="{StaticResource LabelTextStyle}"/>
                                    <ComboBox x:Name="GroupComboBox" 
                                              Style="{StaticResource DefaultComboBoxStyle}"
                                              DisplayMemberPath="GroupName"
                                              SelectedValuePath="GroupId"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Дополнительная информация о госте -->
                    <Border Background="{StaticResource BackgroundSecondaryColor}" 
                            CornerRadius="8" 
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="Дополнительная информация" 
                                       Style="{StaticResource SectionHeaderStyle}" 
                                       Margin="0,0,0,15"/>

                            <!-- Адрес -->
                            <StackPanel>
                                <TextBlock Text="Адрес" Style="{StaticResource LabelTextStyle}"/>
                                <TextBox x:Name="AddressTextBox" 
                                         Style="{StaticResource DefaultTextBoxStyle}" 
                                         Height="60" 
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalContentAlignment="Top"
                                         Padding="14,10"/>
                            </StackPanel>

                            <!-- Примечания -->
                            <StackPanel Margin="0,15,0,0">
                                <TextBlock Text="Примечания" Style="{StaticResource LabelTextStyle}"/>
                                <TextBox x:Name="NotesTextBox" 
                                         Style="{StaticResource DefaultTextBoxStyle}" 
                                         Height="80" 
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalContentAlignment="Top"
                                         Padding="14,10"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Сообщение об ошибке -->
                    <TextBlock x:Name="ErrorMessageTextBlock" 
                               Style="{StaticResource ErrorTextStyle}" 
                               Visibility="Collapsed"
                               Margin="0,15,0,0"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Панель кнопок -->
            <Grid Grid.Row="2" Background="{StaticResource BackgroundSecondaryColor}">
                <Border BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderColor}">
                    <Grid Margin="30,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Button x:Name="CancelButton" 
                                    Content="Отмена" 
                                    Style="{StaticResource SecondaryButtonStyle}" 
                                    Width="120" 
                                    Click="CancelButton_Click"/>

                            <Button x:Name="SaveButton" 
                                    Content="Сохранить" 
                                    Style="{StaticResource PrimaryButtonStyle}" 
                                    Width="150" 
                                    Margin="15,0,0,0"
                                    Click="SaveButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>