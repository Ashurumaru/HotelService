<Window x:Class="HotelService.Views.Windows.PaymentEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelService.Views.Windows"
        mc:Ignorable="d"
        Title="Добавление оплаты" 
        Height="730" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource CustomWindowStyle}"
        MouseDown="Window_MouseDown">
    <Border Background="{StaticResource BackgroundPrimaryColor}" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <!-- Заголовок окна -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" CornerRadius="10,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="WindowTitleTextBlock" 
                               Text="Добавление новой оплаты" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="20,0,0,0"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <Button x:Name="MinimizeButton" Style="{StaticResource DarkMinimizeButtonStyle}" Click="MinimizeButton_Click"/>
                        <Button x:Name="CloseButton" Style="{StaticResource DarkCloseButtonStyle}" Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Форма для данных оплаты -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="20,15">
                <StackPanel>
                    <TextBlock Text="Информация о бронировании" 
                               Style="{StaticResource SectionHeaderStyle}" 
                               Margin="0,0,0,15"/>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Номер бронирования:" 
                                   Grid.Column="0" 
                                   Foreground="{StaticResource TextTertiaryColor}"/>
                        <TextBlock x:Name="BookingIdTextBlock" 
                                   Text="123" 
                                   Grid.Column="1" 
                                   FontWeight="Medium"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Гость:" 
                                   Grid.Column="0" 
                                   Foreground="{StaticResource TextTertiaryColor}"/>
                        <TextBlock x:Name="GuestNameTextBlock" 
                                   Text="Иванов Иван Иванович" 
                                   Grid.Column="1" 
                                   FontWeight="Medium"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Общая сумма:" 
                                   Grid.Column="0" 
                                   Foreground="{StaticResource TextTertiaryColor}"/>
                        <TextBlock x:Name="TotalAmountTextBlock" 
                                   Text="15 000.00 ₽" 
                                   Grid.Column="1" 
                                   FontWeight="Medium"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Остаток к оплате:" 
                                   Grid.Column="0" 
                                   Foreground="{StaticResource TextTertiaryColor}"/>
                        <TextBlock x:Name="RemainingAmountTextBlock" 
                                   Text="10 000.00 ₽" 
                                   Grid.Column="1" 
                                   FontWeight="Medium"
                                   Foreground="{StaticResource WarningColor}"/>
                    </Grid>

                    <TextBlock Text="Данные оплаты" 
                               Style="{StaticResource SectionHeaderStyle}" 
                               Margin="0,15,0,15"/>

                    <TextBlock Text="Сумма оплаты:" Style="{StaticResource LabelTextStyle}"/>
                    <TextBox x:Name="AmountTextBox" 
                             Style="{StaticResource DefaultTextBoxStyle}" 
                             Margin="0,0,0,15"
                             PreviewTextInput="DecimalValidationTextBox"
                             TextChanged="AmountTextBox_TextChanged"/>

                    <TextBlock Text="Способ оплаты:" Style="{StaticResource LabelTextStyle}"/>
                    <ComboBox x:Name="PaymentMethodComboBox" 
                              Style="{StaticResource FilterComboBoxStyle}" 
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Статус оплаты:" Style="{StaticResource LabelTextStyle}"/>
                    <ComboBox x:Name="StatusComboBox" 
                              Style="{StaticResource FilterComboBoxStyle}" 
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Примечания:" Style="{StaticResource LabelTextStyle}"/>
                    <TextBox x:Name="NotesTextBox" 
                             Style="{StaticResource DefaultTextBoxStyle}" 
                             Height="60"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalContentAlignment="Top"
                             Padding="12,8"/>
                </StackPanel>
            </Border>

            <!-- Панель кнопок -->
            <Grid Grid.Row="2" Background="{StaticResource BackgroundSecondaryColor}">
                <Border BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderColor}">
                    <Grid Margin="20,0">
                        <TextBlock x:Name="ValidationMessageTextBlock" 
                                   Text="" 
                                   Foreground="{StaticResource ErrorColor}" 
                                   VerticalAlignment="Center"
                                   FontWeight="Medium"
                                   Visibility="Collapsed"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Button x:Name="CancelButton" 
                                    Content="Отмена" 
                                    Style="{StaticResource SecondaryButtonStyle}" 
                                    Width="120" 
                                    Margin="0,0,10,0"
                                    Click="CancelButton_Click"/>

                            <Button x:Name="SaveButton" 
                                    Content="Сохранить" 
                                    Style="{StaticResource PrimaryButtonStyle}" 
                                    Width="120" 
                                    Click="SaveButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>