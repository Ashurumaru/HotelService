<Window x:Class="HotelService.Views.Windows.BookingViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelService.Views.Windows"
        mc:Ignorable="d"
        Title="Просмотр бронирования" 
        Height="580" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource CustomWindowStyle}"
        MouseDown="Window_MouseDown">

    <Border Background="{StaticResource BackgroundPrimaryColor}" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" CornerRadius="10,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Просмотр информации о бронировании" 
                               Foreground="White"
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="20,0,0,0"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0">
                        <Button x:Name="MinimizeButton" Style="{StaticResource DarkMinimizeButtonStyle}" Click="MinimizeButton_Click"/>
                        <Button x:Name="CloseButton" Style="{StaticResource DarkCloseButtonStyle}" Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" Margin="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20,15">
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                    Width="80" 
                                    Height="80" 
                                    Background="{StaticResource PrimaryColor}" 
                                    CornerRadius="40">
                                <TextBlock x:Name="BookingNumberTextBlock" 
                                           Text="1" 
                                           Foreground="White" 
                                           FontSize="36" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                <TextBlock x:Name="BookingTitleTextBlock" 
                                           Text="Бронирование #1" 
                                           Style="{StaticResource TitleTextStyle}"
                                           Margin="0,0,0,5"/>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" 
                                            Background="{StaticResource AccentColor}" 
                                            CornerRadius="4" 
                                            Padding="8,4" 
                                            Margin="0,0,10,0">
                                        <TextBlock x:Name="StatusTextBlock" 
                                                   Text="Подтверждено" 
                                                   Foreground="White" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="13"/>
                                    </Border>

                                    <Border Grid.Column="1" 
                                            Background="{StaticResource PrimaryLightColor}" 
                                            CornerRadius="4" 
                                            Padding="8,4" 
                                            Margin="0,0,10,0">
                                        <TextBlock x:Name="RoomTextBlock" 
                                                   Text="Номер 101" 
                                                   Foreground="White" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="13"/>
                                    </Border>

                                    <Border Grid.Column="2" 
                                            Background="{StaticResource InfoColor}" 
                                            CornerRadius="4" 
                                            Padding="8,4">
                                        <TextBlock x:Name="NightsTextBlock" 
                                                   Text="3 ночи" 
                                                   Foreground="White" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="13"/>
                                    </Border>
                                </Grid>

                                <TextBlock x:Name="DateRangeTextBlock" 
                                           Text="21.05.2025 - 24.05.2025" 
                                           Foreground="{StaticResource TextSecondaryColor}" 
                                           FontSize="14" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,7.5,0">
                            <StackPanel>
                                <TextBlock Text="Информация о госте" 
                                           Style="{StaticResource SectionHeaderStyle}" 
                                           Margin="0,0,0,10"/>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ФИО:" 
                                               Grid.Column="0" 
                                               Foreground="{StaticResource TextTertiaryColor}"/>
                                    <TextBlock x:Name="GuestNameTextBlock" 
                                               Text="Иванов Иван Иванович" 
                                               Grid.Column="1" 
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Телефон:" 
                                               Grid.Column="0" 
                                               Foreground="{StaticResource TextTertiaryColor}"/>
                                    <TextBlock x:Name="GuestPhoneTextBlock" 
                                               Text="+7 (999) 123-4567" 
                                               Grid.Column="1" 
                                               FontWeight="Medium"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Email:" 
                                               Grid.Column="0" 
                                               Foreground="{StaticResource TextTertiaryColor}"/>
                                    <TextBlock x:Name="GuestEmailTextBlock" 
                                               Text="ivanov@example.com" 
                                               Grid.Column="1" 
                                               FontWeight="Medium"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Адрес:" 
                                               Grid.Column="0" 
                                               Foreground="{StaticResource TextTertiaryColor}"/>
                                    <TextBlock x:Name="GuestAddressTextBlock" 
                                               Text="г. Улан-Удэ, ул. Ленина, 1, кв. 1" 
                                               Grid.Column="1" 
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"/>
                                </Grid>

                                <Grid Margin="0,5" x:Name="GuestVIPGrid">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="VIP статус:" 
                                               Grid.Column="0" 
                                               Foreground="{StaticResource TextTertiaryColor}"/>
                                    <TextBlock x:Name="GuestVIPTextBlock" 
                                               Text="Да" 
                                               Grid.Column="1" 
                                               Foreground="{StaticResource AccentColor}"
                                               FontWeight="SemiBold"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Баллы лояльности:" 
                                               Grid.Column="0" 
                                               Foreground="{StaticResource TextTertiaryColor}"/>
                                    <TextBlock x:Name="GuestPointsTextBlock" 
                                               Text="1250" 
                                               Grid.Column="1" 
                                               FontWeight="Medium"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="7.5,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Детали бронирования" 
                                           Style="{StaticResource SectionHeaderStyle}" 
                                           Margin="0,0,0,10"/>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Источник:" 
                                               Grid.Column="0" 
                                               Foreground="{StaticResource TextTertiaryColor}"/>
                                    <TextBlock x:Name="SourceTextBlock" 
                                               Text="Телефонный звонок" 
                                               Grid.Column="1" 
                                               FontWeight="Medium"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Дата заезда:" 
                                               Grid.Column="0" 
                                               Foreground="{StaticResource TextTertiaryColor}"/>
                                    <TextBlock x:Name="CheckInDateTextBlock" 
                                               Text="21.05.2025" 
                                               Grid.Column="1" 
                                               FontWeight="Medium"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Дата выезда:" 
                                               Grid.Column="0" 
                                               Foreground="{StaticResource TextTertiaryColor}"/>
                                    <TextBlock x:Name="CheckOutDateTextBlock" 
                                               Text="24.05.2025" 
                                               Grid.Column="1" 
                                               FontWeight="Medium"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Количество ночей:" 
                                               Grid.Column="0" 
                                               Foreground="{StaticResource TextTertiaryColor}"/>
                                    <TextBlock x:Name="NightsCountTextBlock" 
                                               Text="3" 
                                               Grid.Column="1" 
                                               FontWeight="Medium"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Взрослых:" 
                                               Grid.Column="0" 
                                               Foreground="{StaticResource TextTertiaryColor}"/>
                                    <TextBlock x:Name="AdultsTextBlock" 
                                               Text="2" 
                                               Grid.Column="1" 
                                               FontWeight="Medium"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Детей:" 
                                               Grid.Column="0" 
                                               Foreground="{StaticResource TextTertiaryColor}"/>
                                    <TextBlock x:Name="ChildrenTextBlock" 
                                               Text="1" 
                                               Grid.Column="1" 
                                               FontWeight="Medium"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Номер:" 
                                               Grid.Column="0" 
                                               Foreground="{StaticResource TextTertiaryColor}"/>
                                    <TextBlock x:Name="RoomNumberTextBlock" 
                                               Text="101" 
                                               Grid.Column="1" 
                                               FontWeight="Medium"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Тип номера:" 
                                               Grid.Column="0" 
                                               Foreground="{StaticResource TextTertiaryColor}"/>
                                    <TextBlock x:Name="RoomTypeTextBlock" 
                                               Text="Люкс" 
                                               Grid.Column="1" 
                                               FontWeight="Medium"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Финансовая информация" 
                                       Style="{StaticResource SectionHeaderStyle}" 
                                       Margin="0,0,0,10"/>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Общая стоимость:" 
                                           Grid.Column="0" 
                                           Foreground="{StaticResource TextTertiaryColor}"/>
                                <TextBlock x:Name="TotalAmountTextBlock" 
                                           Text="15 000.00 ₽" 
                                           Grid.Column="1" 
                                           FontWeight="SemiBold"/>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Сумма депозита:" 
                                           Grid.Column="0" 
                                           Foreground="{StaticResource TextTertiaryColor}"/>
                                <TextBlock x:Name="DepositAmountTextBlock" 
                                           Text="5 000.00 ₽" 
                                           Grid.Column="1" 
                                           FontWeight="Medium"/>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Депозит оплачен:" 
                                           Grid.Column="0" 
                                           Foreground="{StaticResource TextTertiaryColor}"/>
                                <TextBlock x:Name="DepositPaidTextBlock" 
                                           Text="Да" 
                                           Grid.Column="1" 
                                           Foreground="{StaticResource SuccessColor}"
                                           FontWeight="SemiBold"/>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Примечания:" 
                                           Grid.Column="0" 
                                           Foreground="{StaticResource TextTertiaryColor}"
                                           VerticalAlignment="Top"/>
                                <TextBlock x:Name="NotesTextBlock" 
                                           Text="Гость предпочитает номер с видом на город. Требуется дополнительная подушка." 
                                           Grid.Column="1" 
                                           TextWrapping="Wrap"
                                           FontWeight="Medium"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2" Background="{StaticResource BackgroundSecondaryColor}" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderColor}" Padding="20,15" CornerRadius="0,0,10,10">
                <Grid>
                    <Button x:Name="CloseButton2" 
                            Content="Закрыть" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Width="120" 
                            HorizontalAlignment="Right"
                            Click="CloseButton2_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>