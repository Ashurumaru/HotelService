<Page x:Class="HotelService.Views.Pages.HandbookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelService.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1200"
      Title="Справочники">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Справочники"
                   Style="{StaticResource PageTitleStyle}"
                   Margin="20,15,20,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20,5,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 1 -->
                <Border Grid.Column="0" Grid.Row="0" 
                        Style="{StaticResource CardStyle}" 
                        Margin="5">
                    <Button Content="Типы номеров" 
                            Name="RoomTypeButton"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10" Height="50" 
                            Click="RoomTypeButton_Click"/>
                </Border>

                <Border Grid.Column="1" Grid.Row="0" 
                        Style="{StaticResource CardStyle}" 
                        Margin="5">
                    <Button Content="Источники бронирования" 
                            Name="BookingSourceButton"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10" Height="50" 
                            Click="BookingSourceButton_Click"/>
                </Border>

                <Border Grid.Column="2" Grid.Row="0" 
                        Style="{StaticResource CardStyle}" 
                        Margin="5">
                    <Button Content="Должности" 
                            Name="PositionButton"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10" Height="50" 
                            Click="PositionButton_Click"/>
                </Border>

                <!-- Row 2 -->
                <Border Grid.Column="0" Grid.Row="1" 
                        Style="{StaticResource CardStyle}" 
                        Margin="5">
                    <Button Content="Категории удобств" 
                            Name="AmenityCategoryButton"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10" Height="50" 
                            Click="AmenityCategoryButton_Click"/>
                </Border>

                <Border Grid.Column="1" Grid.Row="1" 
                        Style="{StaticResource CardStyle}" 
                        Margin="5">
                    <Button Content="Удобства" 
                            Name="AmenityButton"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10" Height="50" 
                            Click="AmenityButton_Click"/>
                </Border>

                <Border Grid.Column="2" Grid.Row="1" 
                        Style="{StaticResource CardStyle}" 
                        Margin="5">
                    <Button Content="Группы гостей" 
                            Name="GuestGroupButton"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10" Height="50" 
                            Click="GuestGroupButton_Click"/>
                </Border>

                <!-- Row 3 -->
                <Border Grid.Column="0" Grid.Row="2" 
                        Style="{StaticResource CardStyle}" 
                        Margin="5">
                    <Button Content="Типы повреждений" 
                            Name="DamageTypeButton"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10" Height="50" 
                            Click="DamageTypeButton_Click"/>
                </Border>

                <Border Grid.Column="1" Grid.Row="2" 
                        Style="{StaticResource CardStyle}" 
                        Margin="5">
                    <Button Content="Категории услуг" 
                            Name="ServiceCategoryButton"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10" Height="50" 
                            Click="ServiceCategoryButton_Click"/>
                </Border>

                <Border Grid.Column="2" Grid.Row="2" 
                        Style="{StaticResource CardStyle}" 
                        Margin="5">
                    <Button Content="Услуги" 
                            Name="ServiceButton"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10" Height="50" 
                            Click="ServiceButton_Click"/>
                </Border>

                <!-- Row 4 -->
                <Border Grid.Column="0" Grid.Row="3" 
                        Style="{StaticResource CardStyle}" 
                        Margin="5">
                    <Button Content="Способы оплаты" 
                            Name="PaymentMethodButton"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10" Height="50" 
                            Click="PaymentMethodButton_Click"/>
                </Border>

                <Border Grid.Column="1" Grid.Row="3" 
                        Style="{StaticResource CardStyle}" 
                        Margin="5">
                    <Button Content="Типы документов" 
                            Name="DocumentTypeButton"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10" Height="50" 
                            Click="DocumentTypeButton_Click"/>
                </Border>

                <Border Grid.Column="2" Grid.Row="3" 
                        Style="{StaticResource CardStyle}" 
                        Margin="5">
                    <Button Content="Типы транзакций" 
                            Name="TransactionTypeButton"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10" Height="50" 
                            Click="TransactionTypeButton_Click"/>
                </Border>

                <!-- Row 5 -->
                <Border Grid.Column="0" Grid.Row="4" 
                        Style="{StaticResource CardStyle}" 
                        Margin="5">
                    <Button Content="Типы задач" 
                            Name="TaskTypeButton"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10" Height="50" 
                            Click="TaskTypeButton_Click"/>
                </Border>

                <Border Grid.Column="1" Grid.Row="4" 
                        Style="{StaticResource CardStyle}" 
                        Margin="5">
                    <Button Content="Транзакции лояльности" 
                            Name="LoyaltyTransactionButton"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10" Height="50" 
                            Click="LoyaltyTransactionButton_Click"/>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>